    <!-- Central Block removed - was blocking robot spawn point -->

    <!-- Maze Section -->
    <model name="maze_wall_1">
      <pose>6 5 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
